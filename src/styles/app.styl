.slider
    z-index 1
    width 600px
    height 450px
    overflow hidden
    position relative
    &__ul
        width 300%
    &__ul, &__item
        padding 0
        margin 0
        list-style-type none
        float left
    & .nav
        position absolute
        left 40%
        bottom 10px
        & span
            opacity 0.6
            background #fff
            margin-right 15px
            width 20px
            height 20px
            border-radius 10px
            cursor pointer
            float left
            box-shadow 0 1px 2px #000
            &.active
                background blue
.next, .prev
    z-index 2
    font-size 120px
    cursor pointer
    position absolute
    top 150px
    color #fff
    opacity .6
.prev
    left 10px
.next
    left 550px
