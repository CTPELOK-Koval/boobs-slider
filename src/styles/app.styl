.slider
    z-index 9
    width 600px
    height 450px
    overflow hidden
    position relative
    &__ul, &__item
        padding 0
        margin 0
        list-style-type none
        float left
    & .nav
        position absolute
        left 10px
        bottom 10px
        & span
            opacity 0.6
            background #fff
            margin-right 15px
            width 20px
            height 20px
            border-radius 10px
            cursor pointer
            float left
            box-shadow 0 1px 2px #000
            &.active
                background blue